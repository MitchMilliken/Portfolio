@model IndexViewModel; 

@{
    ViewData["Title"] = "Home Page";
}

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#persons').dataTable({
                "paging": false,
                "filter": false
            });

            $('#cars').dataTable({
                "paging": false,
                "filter": false
            });

            $('#dogs').dataTable({
                "paging": false,
                "filter": false
            });


        });
    </script>
}


<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
</div>


<table id="persons">
    <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model.Persons)
        {
            <tr>
                <td>@person.FirstName</td>
                <td>@person.LastName</td>
            </tr>

        }

    </tbody>
</table>



<table id="cars">
    <thead>
        <tr>
            <th>Color</th>
            <th>Year</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in Model.Cars)
        {
            <tr>
                <td>@car.Color</td>
                <td>@car.Year</td>
            </tr>

        }

    </tbody>
</table>


<table id="dogs">
    <thead>
        <tr>
            <th>Coat</th>
            <th>Breed</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var dog in Model.Dogs)
        {
            <tr>
                <td>@dog.Fur</td>
                <td>@dog.Breed</td>

            </tr>



        }

    </tbody>
</table>